            winktot = winktot

    return [fonttot, autotot, winktot]


def totaal_aan_geld(spelbord, speler):
    gtot = 0
    fonttot = totaal_aantal_utiliteiten(spelbord, speler)[0]
    autotot = totaal_aantal_utiliteiten(spelbord, speler)[1]
    winktot = totaal_aantal_utiliteiten(spelbord, speler)[2]
    for kaart in spelbord[speler]:
        if kaart == 2:
            gtot = gtot + 1
        elif kaart == 5:
            if 22 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 7:
            if 9 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 9:
            gtot = gtot + 1
        elif kaart == 11:
            gtot = gtot + 1
        elif kaart == 12:
            gtot = gtot + 1
            if 28 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 13:
            gtot = gtot + winktot
        elif kaart == 14:
            gtot = gtot + 1
        elif kaart == 15:
            gtot = gtot + 1
        elif kaart == 16:
            gtot = gtot + fonttot
        elif kaart == 17:
            gtot = gtot + autotot
        elif kaart == 18:
            gtot = gtot + 1
            if 22 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 19:
            gtot = gtot + 1
            if 4 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 20:
            gtot = gtot + 2
        elif kaart == 22:
            gtot = gtot + 1
        elif kaart == 23:
            gtot = gtot + 1
        elif kaart == 24:
            gtot = gtot + 1
        elif kaart == 26:
            gtot = gtot + 2
        elif kaart == 27:
            gtot = gtot + 1
        elif kaart == 28:
            gtot = gtot + 1
        elif kaart == 29:
            gtot = gtot + 1
            if 21 in spelbord[speler]:
                gtot = gtot + 1
        elif kaart == 32:
            gtot = gtot + 1
        elif kaart == 34:
            gtot = gtot + 2
        elif kaart == 35:
            k = 0
            for spelers in spelbord:
                for kaart2 in spelbord[spelers]:
                    if kaart2 == 8:
                        k = k + 1
            gtot = gtot + k
        elif kaart == 36:
            gtot = gtot + 3
        elif kaart == 37:
            gtot = gtot + 2
        elif kaart == 38:
            gtot = gtot + 4
        elif kaart == 40:
            gtot = gtot + 1
        elif kaart == 42:
            gtot = gtot + 2
        elif kaart == 43:
            gtot = gtot + 2
        elif kaart == 44:
            gtot = gtot + 1
        elif kaart == 45:
            gtot = gtot + 3
        elif kaart == 47:
            gtot = gtot + 2
        elif kaart == 48:
            gtot = gtot + 1
        elif kaart == 49:
            gtot = gtot + 1
        else:
            gtot = gtot
    return gtot


def totaal_aan_punten(spelbord, speler):
    ptot = 0
    fonttot = totaal_aantal_utiliteiten(spelbord, speler)[0]
    autotot = totaal_aantal_utiliteiten(spelbord, speler)[1]
    winktot = totaal_aantal_utiliteiten(spelbord, speler)[2]
    for kaart in spelbord[speler]:
        if kaart == 4:
            ptot = ptot + 1
        elif kaart == 5:
            ptot = ptot + 1
        elif kaart == 6:
            ptot = ptot + 1
        elif kaart == 7:
            ptot = ptot + 1
        elif kaart == 8:
            ptot = ptot + 2
        elif kaart == 10:
            ptot = ptot + fonttot
        elif kaart == 16:
            ptot = ptot + 1
        elif kaart == 17:
            ptot = ptot + autotot
        elif kaart == 19:
            ptot = ptot + 2
        elif kaart == 21:
            k = 0
            for spelers in spelbord:
                for kaart2 in spelbord[spelers]:
                    if kaart2 == 17:
                        k = k + 2
            ptot = ptot + k
        elif kaart == 22:
            ptot = ptot + 1
        elif kaart == 23:
            ptot = ptot + 1
        elif kaart == 24:
            ptot = ptot + 1
        elif kaart == 25:
            ptot = ptot + 3
        elif kaart == 26:
            ptot = ptot + 1
        elif kaart == 27:
            ptot = ptot + 2
        elif kaart == 28:
            ptot = ptot + 2
            for spelers in spelbord:
                if 33 in spelbord[spelers]:
                    ptot = ptot + 2
        elif kaart == 29:
            ptot = ptot + 2
        elif kaart == 30:
            ptot = ptot + 3
        elif kaart == 31:
            ptot = ptot + 3
            j = 0
            for kaart2 in spelbord[speler]:
                if kaart2 == 31:
                    j = j + 2
            ptot = ptot + j - 2
        elif kaart == 32:
            ptot = ptot + 3
        elif kaart == 33:
            ptot = ptot + 4
            for spelers in spelbord:
                for kaart2 in spelbord[spelers]:
                    if kaart2 == 8:
                        ptot = ptot + 1
        elif kaart == 34:
            ptot = ptot + 2
        elif kaart == 35:
            ptot = ptot + 4
        elif kaart == 36:
            ptot = ptot + 1
        elif kaart == 37:
            ptot = ptot + 3
        elif kaart == 38:
            ptot = ptot + 1
        elif kaart == 39:
            ptot = ptot + 5
        elif kaart == 40:
            ptot = ptot + 4
        elif kaart == 41:
            ptot = ptot + 7
        elif kaart == 42:
            ptot = ptot + 5
        elif kaart == 43:
            ptot = ptot + winktot
        elif kaart == 44:
            ptot = ptot + 7
        elif kaart == 45:
            ptot = ptot + winktot
        elif kaart == 46:
            ptot = ptot + 8
        elif kaart == 47:
            ptot = ptot + 5
        elif kaart == 48:
            ptot = ptot + 8
        elif kaart == 49:
            ptot = ptot + 8
        elif kaart == 50:
            lijst1 = []
            for spelers in spelbord:
                if spelers != speler:
                    j = totaal_aantal_utiliteiten(spelbord, spelers)[1]
                    lijst1.append(j)
            ptot = ptot + max(lijst1) + autotot
        elif kaart == 51:
            lijst2 = []
            for spelers in spelbord:
                if spelers != speler:
                    j = totaal_aantal_utiliteiten(spelbord, spelers)[0]
                    lijst2.append(j)
            ptot = ptot + max(lijst2) + fonttot
        else:
            ptot = ptot

    return ptot


def is_spel_gedaan(spelbord, max_aantal_punten):
    for speler in spelbord:
        if totaal_aan_punten(spelbord, speler) >= max_aantal_punten:
            return True
    return False


def winnaar(spelbord):
    dict1 = dict()
    lijst1 = []
    for speler in spelbord:
        dict1[totaal_aan_punten(spelbord, speler)] = speler
    for key in dict1:
        lijst1.append(key)
    m = max(lijst1)
    winner = dict1.get(m)
    return winner


def start(aantal_spelers, max_aantal_punten):
    dictio = maak_dict()
    spelbord = start_spel(aantal_spelers)
    while not is_spel_gedaan(spelbord, max_aantal_punten):
        for speler in spelbord:
            print('Speler', speler, 'krijgt', totaal_aan_geld(spelbord, speler), 'geld.')
            print('Speler', speler, 'heeft', totaal_aan_punten(spelbord, speler), 'punten.')
        klaar = input('Klaar om in te geven?')
        while klaar == 'Debug':
            for speler in spelbord:
                print('Speler', speler, 'heeft', spelbord[speler])
            okofniet = input('Welke speler klopt niet?')
            ok = int(okofniet)
            kaarttoegevoegd = input('Welke kaart mist deze speler?')
            kaart = int(kaarttoegevoegd)
            if kaart != 0:
                spelbord[ok].append(kaart)
                print('Kaart', kaart, '(' + str(dictio.get(kaart)) + ')', 'toegevoegd aan dek van speler', ok)
                if is_spel_gedaan(spelbord, max_aantal_punten):
                    end_game(spelbord)
                    klaar = 'j'
                else:
                    for speler in spelbord:
                        print('Speler', speler, 'krijgt', totaal_aan_geld(spelbord, speler), 'geld.')
                        print('Speler', speler, 'heeft', totaal_aan_punten(spelbord, speler), 'punten.')
                    klaar = input('Klaar om in te geven?')
            else:
                kaartverwijderd = input('Welke kaart heeft deze speler te veel?')
                kaart2 = int(kaartverwijderd)
                if kaart2 in spelbord[ok] and kaart2 != 0:
                    spelbord[ok].remove(kaart2)
                    print('Kaart', kaart2, '(' + str(dictio.get(kaart2)) + ')', 'verwijderd van dek van speler', ok)
                    for speler in spelbord:
                        print('Speler', speler, 'krijgt', totaal_aan_geld(spelbord, speler), 'geld.')
                        print('Speler', speler, 'heeft', totaal_aan_punten(spelbord, speler), 'punten.')
                    klaar = input('Klaar om in te geven?')
                else:
                    for speler in spelbord:
                        print('Speler', speler, 'krijgt', totaal_aan_geld(spelbord, speler), 'geld.')
                        print('Speler', speler, 'heeft', totaal_aan_punten(spelbord, speler), 'punten.')
                    klaar = input('Klaar om in te geven?')
        spelbord = ronde(spelbord, dictio)
    end_game(spelbord)


def end_game(spelbord):
    print('')
    print('')
    print('')
    print('')
    print('')
    print('')
    print('Speler', winnaar(spelbord), 'is de winnaar.')
    print('Deze speler heeft gewonnen met de set:', spelbord[winnaar(spelbord)])
    print('Deze set is', totaal_aan_punten(spelbord, winnaar(spelbord)), 'punten waard.')
    print('Proficiat!')
    print('')
    print('')
    print('')
    print('')
    print('De sets van de andere spelers waren:')
    for speler in spelbord:
        if speler != winnaar(spelbord):
            print('Speler', speler, 'had', spelbord[speler], 'en had', totaal_aan_punten(spelbord, speler), 'punten.')


start(3, 50)
