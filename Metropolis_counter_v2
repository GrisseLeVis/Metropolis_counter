            fonttot = fonttot + 1
            autotot = autotot + 1
            winktot = winktot + 1
        elif kaart == 18:
            fonttot = fonttot + 1
            winktot = winktot + 1
        elif kaart == 20:
            fonttot = fonttot + 1
            winktot = winktot + 1
        elif kaart == 21:
            autotot = autotot + 1
        elif kaart == 22:
            fonttot = fonttot + 2
        elif kaart == 23:
            fonttot = fonttot + 1
            winktot = winktot + 1
        elif kaart == 24:
            autotot = autotot + 1
        elif kaart == 25:
            autotot = autotot + 2
        elif kaart == 26:
            autotot = autotot + 1
            winktot = winktot + 2
        elif kaart == 27:
            fonttot = fonttot + 1
            autotot = autotot + 1
            winktot = winktot + 1
        elif kaart == 29:
            autotot = autotot + 1
        elif kaart == 30:
            fonttot = fonttot + 2
        elif kaart == 32:
            fonttot = fonttot + 1
        elif kaart == 33:
            fonttot = fonttot + 1
        elif kaart == 34:
            fonttot = fonttot + 1
            autotot = autotot + 1
