def start_spel(aantal_spelers):
    dict1 = dict()
    if aantal_spelers == 2:
        dict1[1] = []
        dict1[2] = []
    elif aantal_spelers == 3:
        dict1[1] = []
        dict1[2] = []
        dict1[3] = []
    elif aantal_spelers == 4:
        dict1[1] = []
        dict1[2] = []
        dict1[3] = []
        dict1[4] = []
    elif aantal_spelers == 5:
        dict1[1] = []
        dict1[2] = []
        dict1[3] = []
        dict1[4] = []
        dict1[5] = []
    elif aantal_spelers == 6:
        dict1[1] = []
        dict1[2] = []
        dict1[3] = []
        dict1[4] = []
        dict1[5] = []
        dict1[6] = []
    return dict1


