def beurt_zonder_bouwkeet(spelbord, speler, dictio):
    zeker = False
    while not zeker:
        for i in range(0, 52):
            print(str(i) + ":", dictio[i])
        print('Speler', speler, 'is aan beurt.')
        gekocht = input('Wat heeft deze speler gekocht?')
        if gekocht.isdigit() and -1 < int(gekocht) < 52:
            gekocht = int(gekocht)
            print('Speler', speler, 'heeft', dictio.get(gekocht), 'gekocht.')
            print('Ja = 1')
            print('Nee = 2')
            jaofnee = input('Bent u hier zeker van?')
            if jaofnee == 1 or '1':
                zeker = True
                if gekocht != 0:
                    spelbord[speler].append(gekocht)
            else:
                zeker = False
        else:
            zeker = False

    return spelbord


def beurt_met_bouwkeet(spelbord, speler, dictio):
    zeker = False
    while not zeker:
        for i in range(0, 52):
            print(str(i) + ":", dictio[i])
        print('Speler', speler, 'is aan beurt.')
        gekocht = input('Wat heeft deze speler gekocht?')
        if gekocht.isdigit() and -1 < int(gekocht) < 52:
            gekocht = int(gekocht)
            print('Speler', speler, 'heeft', dictio.get(gekocht), 'gekocht.')
            print('Ja = 1')
            print('Nee = 2')
            jaofnee = input('Bent u hier zeker van?')
            if jaofnee == 1 or '1':
                zeker = True
                if 0 < gekocht < 32:
                    spelbord[speler].append(gekocht)
                    for i in range(0, 32):
                        print(str(i) + ":", dictio[i])
                    print('Speler', speler, 'is nog eens aan beurt.')
                    gekocht2 = input('Wat heeft deze speler nog gekocht? (met bouwkeet)')
                    if gekocht2.isdigit() and -1 < int(gekocht2) < 32 and int(gekocht2) != 2:
                        gekocht2 = int(gekocht2)
                        print('Speler', speler, 'heeft', dictio.get(gekocht2), 'gekocht.')
                        print('Ja = 1')
                        print('Nee = 2')
                        jaofnee = input('Bent u hier zeker van?')
                        if jaofnee == 1 or '1':
                            zeker = True
                            if gekocht2 != 0:
                                spelbord[speler].append(gekocht2)
                        else:
                            zeker = False
                    else:
                        zeker = False
            else:
                zeker = False
        else:
            zeker = False

    return spelbord


def ronde(spelbord, dictio):
    for speler in spelbord:
        hasbouwkeet = False
        if 3 in spelbord[speler]:
            hasbouwkeet = True
        if not hasbouwkeet:
            spelbord = beurt_zonder_bouwkeet(spelbord, speler, dictio)
        else:
            spelbord = beurt_met_bouwkeet(spelbord, speler, dictio)
    return spelbord


def totaal_aantal_utiliteiten(spelbord, speler):
    fonttot = 0
    autotot = 0
    winktot = 0
    for kaart in spelbord[speler]:
        if kaart == 1:
            fonttot = fonttot + 1
            autotot = autotot + 1
            winktot = winktot + 1
        elif kaart == 4:
            fonttot = fonttot + 1
        elif kaart == 5:
            fonttot = fonttot + 1
            winktot = winktot + 1
        elif kaart == 6:
            autotot = autotot + 1
            winktot = winktot + 1
